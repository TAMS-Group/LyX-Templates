\newcommand{\contactframe}[1][]{%
  \frame{%
	\ifthenelse{\equal{#1}{}}{}{\frametitle{#1}}%
	\begin{center}
	  \insertauthor\\
	  \texttt{\small\@email}

	  \vspace{2\baselineskip}%
	  \insertinstitute
	\end{center}
  }
}

